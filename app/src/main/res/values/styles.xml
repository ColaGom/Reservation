<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:background">@drawable/rounded_rect_primary_16</item>
    </style>

    <style name="TextContent">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="TextStoreInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">@drawable/selector_primary_dark_6</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStoreTabSelected">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>


    <style name="TextStoreTabNormal">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
