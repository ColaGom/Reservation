<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_default">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_height"
        android:layout_marginBottom="@dimen/margin_default" />

    <TextView
        style="@style/TextSubTitle"
        android:text="@string/location" />

    <TextView
        android:id="@+id/tv_location"
        style="@style/TextContent" />

    <TextView
        style="@style/TextSubTitle"
        android:text="@string/opening_hour" />

    <TextView
        android:id="@+id/tv_opening_hour"
        style="@style/TextContent" />

    <TextView
        style="@style/TextSubTitle"
        android:text="@string/holiday" />

    <TextView
        android:id="@+id/tv_holiday"
        style="@style/TextContent" />

    <TextView
        style="@style/TextSubTitle"
        android:text="@string/contact" />

    <TextView
        android:id="@+id/tv_contact"
        style="@style/TextContent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reservation"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_primary_dark_6"
            android:text="@string/reservation"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_waiting"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_primary_dark_6"
            android:text="@string/waiting_room"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_gps"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_primary_dark_6"
            android:text="@string/lookat"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>